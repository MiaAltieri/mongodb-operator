{{logs_directory}}/*.log
{
  rotate {{max_rotations}}
  size {{max_log_size}}
  missingok
  notifempty
  create 0600 {{mongo_user}} {{mongo_user}}
  compress
  nomail
  nocopytruncate
  sharedscripts
  postrotate
    sudo /bin/kill -SIGUSR1 $(sudo systemctl show -p MainPID --value snap.charmed-mongodb.mongod.service)
  endscript
}

